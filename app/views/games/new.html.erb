<h1>New Game</h1>

<% @letters.each do |letter| %>
  <%= letter %>
<% end %>

<br><br><br>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="grid" name="grid" type="hidden" value=<%= @letters.join.downcase %>>
  <input type="text" name="solution" placeholder="Your solution">
  <input type="submit" value="Submit">
</form>
